<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <!--   android:fillViewport="true" -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context="com.carlos.myappportfolio.themoviedb.DetailActivityFragment">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_title_height"
            android:layout_marginBottom="@dimen/detail_title_marginBottom"
            android:background="@color/teal"
            android:paddingLeft="@dimen/detail_title_paddinLeft"
            android:paddingTop="@dimen/detail_title_paddinTop"

            android:textColor="@color/white"
            android:textSize="@dimen/detail_title_textSize"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_inner_ll_margin_left"
            android:layout_marginRight="@dimen/detail_inner_ll_margin_right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="@dimen/detail_image_width"
                    android:layout_height="@dimen/detail_image_height"


                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/tvRuntimeEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_layout_height"
                        android:gravity="center"
                        android:text="@string/detail_runtime" />

                    <TextView
                        android:id="@+id/tvRunTime"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_layout_height"
                        android:layout_below="@+id/tvRuntimeEt"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/ReleaseDateEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_layout_height"
                        android:layout_below="@+id/tvRunTime"
                        android:gravity="center"
                        android:text="@string/detail_release_date_text" />

                    <TextView

                        android:id="@+id/tvReleaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_layout_height"
                        android:layout_below="@+id/ReleaseDateEt"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvRateEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_layout_height"
                        android:gravity="center"
                        android:layout_below="@+id/tvReleaseDate"
                        android:text="@string/detail_rate_text" />

                    <TextView
                        android:id="@+id/tvRate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_layout_height"
                        android:layout_below="@+id/tvRateEt"
                        android:gravity="center" />


                    <Button
                        android:id="@+id/btnFavorite"
                        android:layout_width="@dimen/detail_button_widht"
                        android:layout_height="@dimen/detail_button_height"
                        android:layout_below="@+id/tvRate"
                        android:background="@drawable/roundedbutton"
                        android:drawableRight="@drawable/ic_favorite_outline"
                        android:textColor="@color/grey"
                        android:layout_centerHorizontal="true" />


                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvSynopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_divider_height"
                android:layout_marginBottom="@dimen/detail_divider_marginBottom"
                android:layout_marginTop="@dimen/detail_divider_marginTop"
                android:background="@android:color/black" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Trailers" />

            <ListView
                android:id="@+id/listViewTrailers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Reviews" />

            />

            <ListView
                android:id="@+id/listViewReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>


    </LinearLayout>
</ScrollView>