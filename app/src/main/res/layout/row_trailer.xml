<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/trailer_height"
    android:orientation="horizontal">
   <ImageView
       android:layout_width="@dimen/trailer_img_width"
       android:layout_height="@dimen/trailer_img_height"
       android:src="@drawable/play"
       android:id="@+id/ivStart"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTrailer"
        android:layout_marginTop="@dimen/trailer_text_marginTop"
        android:layout_alignBaseline="@+id/ivStart"
        android:layout_toRightOf="@+id/ivStart"
        android:layout_toEndOf="@+id/ivStart"
        android:paddingLeft="@dimen/trailer_text_paddingLeft"/>


</RelativeLayout>