<resources>
    <style name="InitialScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryDark">#5D4037</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowBackground">@color/custom_background_light_grey</item>
        <item name="dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="toolbarStyle">@style/Toolbar</item>


        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">#795548</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>



    <style name="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/grid_exit</item>
    </style>

    <style name="AppTheme.Detail">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>
